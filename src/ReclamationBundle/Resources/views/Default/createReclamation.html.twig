{% extends 'baseClient.html.twig' %}
{% block content %}
    <link rel="stylesheet" type="text/css" href="style.css" />
<script type="text/javascript" langage="javascript" src="jquery-min.js" ></script>
    <script>
        $(function () {
            $("#ajouter").click(function () {
              valid=true;
               if($("#desc").val() == ""){
                   ($("#desc").next(".error-message").fadeIn()).text("Veuillez entrer ");
                   valid=false;
                }
              return valid;
            })
            
        })
    </script>
    <h1>Ajouter une r√©clamation</h1>
    {{form_start(form)}}
    <div class="form-group row">

        <div id="desc" class="col-sm-6 mb-3 mb-sm-0">

            {{ form_row(form.description) }}


        </div>
    </div>
    <div class="form-group row">

        <div class="col-sm-6 mb-3 mb-sm-0">

            {{ form_row(form.date) }}
        </div>
    </div>

    <div class="form-group row">

        <div class="col-sm-6 mb-3 mb-sm-0">
            {{ form_row(form.etat) }}
        </div>
    </div>
    <div class="form-group row">

        <div class="col-sm-6 mb-3 mb-sm-0">
            {{ form_row(form.type) }}
        </div>
    </div>
    <div class="form-group row">


    </div>

    <button type="submit" class="btn btn-primary"  id="ajouter"> Ajouter </button>
    {{ form_end(form) }}

{% endblock %}
