{% extends 'header.html.twig' %}
{% block content %}

    <div class="container-fluid row">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">{{ action }} categorie</h6>
                </div>
                <div class="card-body">

                    {{ form_start(form) }}

                    <div class="form-group row d-flex flex-column">
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            <label>Nom Cat√©gorie : </label>

                        </div>
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            {{ form_row(form.nomCategorie) }}
                        </div>
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            <div class="alert alert-danger " role="alert" style="display: none" id="errnom" >
                                le champ nom est invalide
                            </div>
                        </div>
                    </div>
                    <div class="form-group row d-flex flex-column ">
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            <label>Description : </label>

                        </div>
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="col-sm-12 mb-3 mb-sm-0">
                            <div class="alert alert-danger " role="alert" style="display: none" id="errdesc" >
                                le champ description est invalide
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" id="btn" class="btn btn-primary" disabled > {{ action }} </button>

                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-2"></div>
    </div>
     <!-- Basic Card Example -->


{% endblock %}



{% block javascripts %}
    <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>

    <script>
        function checkForButton() {
            if($('#produitbundle_categorie_nomCategorie').val().length > 3 && $('#produitbundle_categorie_description').val().length > 3)
                document.getElementById('btn').removeAttribute('disabled');
            else
                document.getElementById('btn').setAttribute('disabled', 'true');

        }

        $(document).ready(()=> {
            checkForButton();


            $('#produitbundle_categorie_nomCategorie').on('blur', (event) => {
                if($('#produitbundle_categorie_nomCategorie').val().length <= 3){
                    $('#errnom').show() ;
                }else{
                    $('#errnom').hide();
                }
                checkForButton();

            })



            $('#produitbundle_categorie_description').on('blur', (event) => {
                if($('#produitbundle_categorie_description').val().length <= 3){
                    $('#errdesc').show() ;
                }else{
                    $('#errdesc').hide();
                }
                checkForButton();

            })
        })
    </script>
{% endblock %}