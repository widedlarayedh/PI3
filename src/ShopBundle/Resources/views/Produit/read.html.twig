{% extends 'baseClient.html.twig' %}
{% block content %}
    <div class="container py-5">
        <div class="row text-center text-white mb-5">
            <div class="col-lg-7 mx-auto">
                <h1 class="display-4">Product List</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <ul class="list-group shadow">
                    {% for i in liste %}
                        <li class="list-group-item">
                            <!-- Custom content-->
                            <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                                <div class="media-body order-2 order-lg-1">
                                    <h5 class="mt-0 font-weight-bold mb-2">{{i.nom}}</h5>
                                    <div class="d-flex align-items-center justify-content-between mt-1">
                                        <h6 class="font-weight-bold my-2">{{i.prix}} DT</h6>
                                    </div>
                                </div><img src="https://images-na.ssl-images-amazon.com/images/I/61UXPmnTC9L._SL1024_.jpg" alt="Generic placeholder image" width="80" class="ml-lg-5 order-1 order-lg-2">
                            </div> <!-- End -->
                            <div class="col">
                                {% if is_granted('ROLE_CLIENT') %}
                                <a href="{{ path('createPanier', {'id':i.id}) }}" class="btn btn-success">Add</a>

                                    <a href="{{ path('readPanier', {'id_client':app.user.id}) }}" class="btn btn-success ">Voir panier</a>
                                {% endif %}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

