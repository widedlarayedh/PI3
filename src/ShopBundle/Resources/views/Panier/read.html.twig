{% extends 'baseClient.html.twig' %}
{% block content %}
    <div class="container mb-4">
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col">Nom du produit</th>
                            <th scope="col">Quantite</th>
                            <th scope="col" class="text-center">Prix</th>
                            <th scope="col" class="text-right">Supprimer</th>
                            <th scope="col" class="text-right">Modifier Quantite</th>
                            <th> </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for i in liste %}
                            <tr>
                                <td><img src="https://dummyimage.com/50x50/55595c/fff"> </td>
                                <td>{{i.produit.nom}}</td>
                                <td>{{i.quantite}}</td>
                                <td>{{ i.produit.prix*i.quantite }}</td>
                                <td class="text-right"><a href="{{ path('deletePanier', {'id':i.id}) }}"><button class="btn btn-sm btn-danger">Supprimer</button> </a></td>
                                <td class="text-right">
                                    <a href="{{ path('updatePanier', {'id':i.id,'mod':1}) }}"><button class="btn btn-sm btn-danger">+</button> </a>
                                    <a href="{{ path('updatePanier', {'id':i.id,'mod':0}) }}"><button class="btn btn-sm btn-danger">-</button> </a>
                                </td>
                            </tr>

                        {% endfor %}





                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col mb-2">
                <div class="row">
                    <a class="col-sm-12  col-md-6">
                        <a href="{{ path('readProduit') }}"><button class="btn btn-sm btn-primary">Continue Shopping</button> </a>
                        <button class="btn btn-sm"></button>

                        {% if is_granted('ROLE_CLIENT') %}
                            <a href="{{ path('createCommande') }}"><button class="btn btn-sm btn-primary">Valider Commande</button> </a>
                        {% endif %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}