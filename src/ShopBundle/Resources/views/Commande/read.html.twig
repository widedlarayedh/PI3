{% extends 'baseClient.html.twig' %}
{% block content %}
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col"># Num Commande</th>
            <th scope="col">Prix Total</th>
            <th scope="col">Etat</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% set n = 0 %}
        {% for i in liste %}
            <tr>
                <th scope="row">{{n}}</th>
                <td>{{ i.prixtotal }}</td>
                <td>{{ i.etat }}</td>
                <td>
                    {% if  i.etat == "en cours" %}
                        <a href="{{ path('deleteCommande', {'id':i.id,'id_client':22}) }}" ><button class="btn btn-sm btn-danger">Annuler</button></a>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('imprimerFacture', {'id':i.id}) }}">
                        <button class="btn btn-primary hidden-print">
                            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>Print
                        </button>

                    </a>
                </td>
            </tr>
            {% set n = n+1 %}
        {% endfor %}


        </tbody>
    </table>


{% endblock %}

