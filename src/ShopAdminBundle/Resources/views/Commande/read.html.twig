{% extends 'baseAdmin.html.twig' %}
{% block content %}
    <form method="post" action="/shop_admin/chercher">
        nom client : <input type="text" name="nomClient"><br>
        <input type="submit" value="chercher">
    </form>
    {% for client in clients %}
        <center><h3>{{ client.nom }}</h3></center>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col"># Id Commande</th>
                <th scope="col">Prix Total</th>
                <th scope="col">Etat</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for commande in commandes %}
                <td>
                {% if client.id == commande.client.id %}
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.prixtotal }}</td>
                    <td>{{ commande.etat }}</td>
                    <td>
                    {% if  commande.etat == "en cours" %}
                        <a href="{{ path('deleteAdmin', {'id':commande.id}) }}" class="btn btn-danger btn-circle">
                            <i class="fas fa-trash"></i>

                        </a>
                        </td>
                        <td>

                        <a href="{{ path('traiterAdmin', {'id':commande.id}) }}" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                      <i class="fas fa-check"></i>
                    </span>
                            <span class="text">Traiter</span>
                        </a>
                    {% endif %}
                    </td>
                {% endif %}
                <td>
                    <a href="{{ path('imprimerFacture', {'id':commande.id}) }}">
                        <button class="btn btn-primary hidden-print">
                            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>Print
                        </button>

                    </a>
                </td>
                </tr>
            {% endfor %}
        </table>
    {% endfor %}
{% endblock %}